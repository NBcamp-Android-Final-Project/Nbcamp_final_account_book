<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그라데이션 배경 -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:endColor="#FF0000FF"
                android:startColor="#FF00FF00"
                android:type="linear" />
            <size
                android:width="30dp"
                android:height="30dp" />
        </shape>
    </item>

    <!-- 중앙에 흰색 원 -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFFFF" />
        </shape>
    </item>
</layer-list>