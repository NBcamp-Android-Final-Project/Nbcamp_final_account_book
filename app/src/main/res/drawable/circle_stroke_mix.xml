<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그라데이션 배경 -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:endColor="@color/expend"
                android:startColor="@color/income"
                android:type="linear" />
            <size
                android:width="30dp"
                android:height="30dp" />
        </shape>
    </item>

    <!-- 중앙에 흰색 원 -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/primary_main" />
        </shape>
    </item>
</layer-list>