<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chart_tab_perc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@drawable/chart_tab_list_perc_text_border"
        android:padding="5dp"
        android:text="55%"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chart_tab_tag_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/icon_tag_traffic"
        android:text="교통비"
        app:layout_constraintBottom_toBottomOf="@id/chart_tab_perc_txt"
        app:layout_constraintStart_toEndOf="@id/chart_tab_perc_txt"
        app:layout_constraintTop_toTopOf="@id/chart_tab_perc_txt" />

    <TextView
        android:id="@+id/chart_tab_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3,200원"
        app:layout_constraintBottom_toBottomOf="@id/chart_tab_perc_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chart_tab_perc_txt" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>