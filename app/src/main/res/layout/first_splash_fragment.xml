<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.firstpage.splash.SplashFragment">

    <ImageView
        android:id="@+id/splash_coin_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_main"
        android:src="@drawable/splash_coin_bg" />

    <ImageView
        android:id="@+id/splash_coin_logo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/splash_coin_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/splash_coin_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/splash_coin_first"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:adjustViewBounds="true"
        android:visibility="visible"
        android:src="@drawable/splash_coin_01"
        app:layout_constraintBottom_toBottomOf="@+id/splash_coin_bg"
        app:layout_constraintStart_toStartOf="@+id/splash_coin_bg" />

    <ImageView
        android:id="@+id/splash_coin_second"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="132dp"
        android:adjustViewBounds="true"
        android:visibility="visible"
        android:src="@drawable/splash_coin_02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/splash_coin_last"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:visibility="visible"
        android:src="@drawable/splash_coin_03"
        app:layout_constraintEnd_toEndOf="@+id/splash_coin_bg"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>