<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <EditText
        android:id="@+id/ev_edit_name"
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:layout_height="wrap_content"
        android:hint="이건열글자제한을위한"
        android:maxLength="10"
        android:maxLines="1"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="TextWatcher 넣을거임!"
        android:textColor="@color/calendar_sunday"
        android:textSize="13sp"
        android:visibility="invisible"
        app:drawableStartCompat="@drawable/ic_warning"
        app:drawableTint="@color/calendar_sunday"
        app:layout_constraintTop_toBottomOf="@+id/ev_edit_name" />
</androidx.constraintlayout.widget.ConstraintLayout>