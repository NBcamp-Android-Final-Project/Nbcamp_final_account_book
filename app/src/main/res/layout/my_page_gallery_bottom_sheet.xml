<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_main">

    <TextView
        android:id="@+id/option_gallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:padding="15dp"
        android:text="새로운 프로필 사진"
        android:textSize="15sp"
        app:drawableLeftCompat="@drawable/ic_gallery"
        app:drawableTint="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/option_remove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:padding="15dp"
        android:text="현재 사진 삭제"
        android:textSize="15sp"
        app:drawableLeftCompat="@drawable/ic_bin"
        app:drawableTint="@color/text_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_gallery" />
</androidx.constraintlayout.widget.ConstraintLayout>