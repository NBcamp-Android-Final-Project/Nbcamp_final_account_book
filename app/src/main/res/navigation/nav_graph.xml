<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/menu_home">

    <fragment
        android:id="@+id/menu_home"
        android:name="com.nbcam_final_account_book.persentation.home.HomeFragment"
        android:label="home"
        tools:layout="@layout/home_fragment" />
    <fragment
        android:id="@+id/menu_statistics"
        android:name="com.nbcam_final_account_book.persentation.chart.ChartFragment"
        android:label="chart"
        tools:layout="@layout/chart_fragment" />
    <fragment
        android:id="@+id/menu_chat"
        android:name="com.nbcam_final_account_book.persentation.chat.ChatFragment"
        android:label="chat"
        tools:layout="@layout/chat_fragment" />
    <fragment
        android:id="@+id/menu_more"
        android:name="com.nbcam_final_account_book.persentation.more.MoreFragment"
        android:label="more"
        tools:layout="@layout/more_fragment" >
        <action
            android:id="@+id/action_menu_more_to_myPageFragment"
            app:destination="@id/myPageFragment" />
        <action
            android:id="@+id/action_menu_more_to_tagFragment"
            app:destination="@id/tagFragment" />
    </fragment>
    <fragment
        android:id="@+id/tagFragment"
        android:name="com.nbcam_final_account_book.persentation.tag.TagFragment"
        android:label="tag_fragment"
        tools:layout="@layout/tag_fragment" >
        <action
            android:id="@+id/action_tagFragment_to_menu_more"
            app:destination="@id/menu_more" />
    </fragment>
    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.nbcam_final_account_book.persentation.mypage.MyPageFragment"
        android:label="마이페이지"
        tools:layout="@layout/my_page_fragment" >
        <action
            android:id="@+id/action_myPageFragment_to_menu_more"
            app:destination="@id/menu_more" />
    </fragment>
</navigation>