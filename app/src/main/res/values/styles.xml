<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.ActiveTextAppearance
        </item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.InactiveTextAppearance
        </item>
    </style>

    <style name="BottomNavigationView.ActiveTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationView.InactiveTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorHighlight">@color/text_highlight</item>
        <item name="boxStrokeColor">@color/textfield_outline_color</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">?attr/colorError</item>
        <item name="boxStrokeErrorColor">?attr/colorError</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/textfield_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/textfield_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/textfield_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/textfield_radius</item>
        <item name="hintTextColor">@color/text_primary</item>
        <item name="startIconTint">@color/text_primary</item>
        <item name="passwordToggleTint">@color/text_primary</item>
        <item name="cursorColor">@color/text_highlight</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColorHighlight">@color/text_highlight</item>
        <item name="cursorColor">@color/text_highlight</item>
    </style>

    <style name="EntryTextInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="boxCornerRadiusBottomEnd">2dp</item>
        <item name="counterTextColor">@color/cheon_primary_bot_nav</item>
        <item name="boxCornerRadiusBottomStart">2dp</item>
        <item name="boxCornerRadiusTopEnd">2dp</item>
        <item name="boxCornerRadiusTopStart">2dp</item>
    </style>

    <style name="TextFieldAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    // 숫자 키패드 스타일

    <style name="NumberPadButtonStyle">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="NumberPadTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHighlight">@color/chart_tab_unselected_text</item>
    </style>
</resources>